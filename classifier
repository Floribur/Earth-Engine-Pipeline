/* ////////////////////////////////////////////////////
// CLASSIFIERS
*/ ////////////////////////////////////////////////////

// CART classifier
// https://developers.google.com/earth-engine/apidocs/ee-classifier-smilecart
var CART = ee.Classifier.smileCart();

// Random Forest classified
// https://developers.google.com/earth-engine/apidocs/ee-classifier-smilerandomforest
var RF = ee.Classifier.smileRandomForest({
  numberOfTrees: 500, // number of forests, mananze used 500
  variablesPerSplit: null,
  minLeafPopulation: 1,
  bagFraction: 0.5,
  maxNodes: null,
  seed: 0,
});

var SVM = ee.Classifier.libsvm();

exports.classifier = {
  CART: CART,
  RF: RF,
  SVM: SVM,
};
